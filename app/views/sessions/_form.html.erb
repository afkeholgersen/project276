<%= stylesheet_link_tag 'form' %>
<% if session.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(session.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% session.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag("/sessions", method: "post") do %>

<div class="enclosure">
  <div class="field pad-left">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>

  <div class="field pad-left">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
  	<%= submit_tag "Log in" ,class: "btn btn-primary"%>
  </div>
</div>

<% end %>
