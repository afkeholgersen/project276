<!DOCTYPE html>
<html>
  <head>
    <title>Project276</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Foodnatic</a>
        </div>
        <ul class="nav navbar-nav pull-right">
           <% if current_user %>
          <li class="active"><a href="<%= home_user_path(current_user)%>">Home</a></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Hello <%= current_user.username %>
            <span class="caret"></span></a>
            <ul class="dropdown-menu">

              <li><%= link_to "My recipes", my_recipes_user_path(current_user) %></li>
              <li><%= link_to "Log out", logout_path %></li>
            </ul>
          </li>
      	  <% else %>
             <li><%= link_to "Sign up", new_user_path %></li>
             <li><%= link_to "log in", new_session_path %></li>
      	  <% end %>

        </ul>
      </div>
    </nav>

		<%= yield %>

  </body>
</html>
